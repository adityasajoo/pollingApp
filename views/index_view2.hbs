<style>
    .card .card-content {
        padding: 5px;
        padding-bottom: 0px;
    }

    .card .card-image {
        padding: 10px;
    }


    .card .card-image img {
        height: 150px;
        width: 90%;
    }

    .btn {
        margin-top: 0%;
    }

    #myform {
        margin-bottom: 0px;
    }

    .card .card-action a:not(.btn):not(.btn-large):not(.btn-small):not(.btn-large):not(.btn-floating) {
        color: #895061;
    }
</style>
<div class="container">

    <div class="row">
        <div class="col s12 m6 offset-m3">
            <div class="card hoverable">
                <div class="card-content">
                    <h5 class="card-title black-text center-align">Add a vote</h5>
                    <div class="row">
                        <div class="col s1"></div>
                        <form class="col s10" action="/vote" method="post" id="myform">
                            <div class="row">
                                <div class="input-field col s12">
                                    <input value="" id="name" name="name" type="text" class="validate">
                                    <label for="name">Name</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <select name="choice">
                                        <option value="" disabled selected>Your Choice</option>
                                        <option value="Yes">Yes</option>
                                        <option value="No">No</option>
                                    </select>
                                    <label>Choice</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input type="text" class="datepicker" name="submissionDate">
                                    <label>Date of vote</label>

                                </div>
                            </div>
                            <div class="row">

                                <p class="center-align">
                                    <a class="waves-effect waves-green btn center-align">Vote</a>
                                </p>

                            </div>
                        </form>
                        <div class="col s1"></div>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="cards">
        <div class="row">
            <div class="col s4">
                <div class="card">
                    <div class="card-image">
                        <img src="images/table.svg">

                    </div>
                    <div class="card-content">

                    </div>
                    <div class="card-action">
                        <a href="#modal1" class="modal-trigger">Table Data</a>
                    </div>
                </div>
            </div>
            <div class="col s4">
                <div class="card">
                    <div class="card-image">
                        <img src="images/line.svg">

                    </div>
                    <div class="card-content">
                    </div>
                    <div class="card-action">
                        <a href="#modal2" class="modal-trigger">Line Graph</a>
                    </div>
                </div>
            </div>
            <div class="col s4">
                <div class="card">
                    <div class="card-image">
                        <img src="images/bar.svg">

                    </div>
                    <div class="card-content">
                    </div>
                    <div class="card-action">
                        <a href="#modal3" class="modal-trigger">Bar Graph</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="modal-content">
        <h4>Modal Header</h4>
        <div class="table-container">
            <div class="row">
                <div class="col s1"></div>
                <div class="col s10">
                    <table class="striped centered" id="myTable">
                        <thead>
                            <tr>
                                <th c>Name</th>
                                <th>Choice</th>
                                <th>Voting Date</th>
                            </tr>
                        </thead>

                        <tbody>

                        </tbody>
                    </table>
                </div>
                <div class="col s1"></div>

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
</div>
<!-- Modal Structure -->
<div id="modal2" class="modal">
    <div class="modal-content">
        <h4>Modal Header</h4>
        <div id="line-grap">
            <canvas id="line" width="400" height="400"></canvas>
        </div>
    </div>
    <div class="modal-footer">
        <a id="line-link" href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
</div>
<!-- Modal Structure -->
<div id="modal3" class="modal">
    <div class="modal-content">
        <h4>Modal Header</h4>
        <div id="bar-graph">
            <canvas id="bar" width="400" height="400"></canvas>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
</div>

    <script>

     var modal;
        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('.modal');
            modal = M.Modal.init(elems, {});
        });

        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('select');
            var instances = M.FormSelect.init(elems, {});
        });

        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('.datepicker');
            var instances = M.Datepicker.init(elems, {
                format: "yyyy-mm-dd"
            });
        });
    </script>